%h1 Listing maps

%table
  %thead
    %tr
      %th Address
      %th Latitude
      %th Longitude
      %th
      %th
      %th

  %tbody
    - @maps.each do |map|
      %tr
        %td= map.address
        %td= map.latitude
        %td= map.longitude
        %td= link_to 'Show', map
        %td= link_to 'Edit', edit_map_path(map)
        %td= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Map', new_map_path
