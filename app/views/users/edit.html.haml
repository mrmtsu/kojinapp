#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", root_path, class: 'btn'
      = link_to "トップページに戻る", root_path, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :Email
          .field-input
            = f.email_field :email
        .field
          .field-label
            profile image
            = f.label :avatar, class: 'main-bottom__text__image' do
              = icon('fas', 'image', class: 'image-icon')
              = f.file_field :avatar, class: 'main-bottom__text__image__file'
        .actions
          = f.submit "Update", class: 'btn'


      